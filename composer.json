{
  "name": "acrolinx/sdk-php",
  "description": "PHP SDK for working with Acrolinx (without Sidebar)",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Acrolinx\\SDK\\": "src/"
    },
    "classmap": [
      "src/"
    ]
  },
  "require": {
    "php": ">=7.1",
    "psr/log": "^1.1",
    "ext-curl": "*",
    "ext-json": "*",
    "react/event-loop": "^1.1.0",
    "react/promise": "^2.7.1",
    "clue/buzz-react": "^2.6",
    "react/http-client": "^0.5.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "vlucas/phpdotenv": "^3.3"
  },
  "scripts": {
    "test": "phpunit --testdox tests --log-junit tmp/junit.xml"
  }
}
